generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  PROVIDER
  ADMIN
}

enum RoomType {
  MEETING_ROOM
  PRIVATE_OFFICE
  PODCAST_STUDIO
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum BlockReason {
  MAINTENANCE
  HOLIDAY
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  phone    String
  role     UserRole @default(USER)
  refresh_token String?

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CoworkingSpace {
  id          String   @id @default(uuid())
  name        String
  address     String
  description String
  amenities   String[]
  pricePerDay Float
  type        RoomType

  booking      Booking[]
  blockedTimes BlockedTime[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id               String @id @default(uuid())
  userId           String
  coworkingSpaceId String

  startTime     DateTime      @db.Date
  endTime       DateTime      @db.Date
  totalPrice    Float
  status        BookingStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)

  user           User           @relation(fields: [userId], references: [id])
  coworkingSpace CoworkingSpace @relation(fields: [coworkingSpaceId], references: [id])
  payment        Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlockedTime {
  id               String      @id @default(uuid())
  coworkingSpaceId String
  startTime        DateTime    @db.Date
  endTime          DateTime    @db.Date
  reason           BlockReason

  coworkingSpace CoworkingSpace @relation(fields: [coworkingSpaceId], references: [id])

  createAt DateTime @default(now())
}

model Payment {
  id              String  @id @default(uuid())
  bookingId       String  @unique
  amount          Float
  method          String
  stripePaymentId String?

  booking  Booking  @relation(fields: [bookingId], references: [id])
  createAt DateTime @default(now())
}
